<!doctype html>
<html lang="en">
<head>
    <title>Create Shop</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="/images/icon-web.png">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/loading.animation.css">

</head>
<body>
<!-- animation loading-->
<div class="overplay-animation">
    <div class="loading-animation"></div>
</div>
<!--animation loading-->
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">

            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap py-5">
                    <div class="d-flex align-items-center justify-content-center"><h1 class="animate-character">ATN</h1></div>
                    <h3 class="text-center mb-0">Create Shop</h3>
                    <form action="/handle-create-shop" class="create-shop-form" method="post">
                        <div class="form-group">
                            <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-home"></span></div>
                            <input type="text" class="form-control" id="txt_shop_name" placeholder="shop name" required>
                        </div>
                        <div class="form-group">
                            <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-map-marker"></span></div>
                            <input type="text" class="form-control" id="txt_address" placeholder="address" required name="password">
                        </div>
                        <div class="form-group d-md-flex">

                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn form-control btn-primary rounded submit px-3">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
<script src="/js/createShop.js"></script>
</body>
</html>

